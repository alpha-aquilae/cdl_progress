<% @page_title = "D2"%>
<div class="subject list">
  <h2>CDL Prospect Tracker</h2>
  
  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>Name</th>
      <th>General Knowledge</th>
      <th>Air Brakes</th>
      <th>Passenger</th>
      <th>School</th>
      <th>Physical</th>
      <th>Skills Test</th>
      <th>Trips</th>
    </tr>
    <% @cdls.each do |cdl| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= cdl.name %></td>
      <td class="center"><%= status_tag(cdl.general_knowledge) %></td>
      <td class="center"><%= status_tag(cdl.air_brakes) %></td>
      <td class="center"><%= status_tag(cdl.passenger) %></td>
      <td class="center"><%= status_tag(cdl.school) %></td>
      <td class="center"><%= status_tag(cdl.physical) %></td>
      <td class="center"><%= status_tag(cdl.skills_test) %></td>
      <td class="center"><%= button_to("#{cdl.trips.map {|t| t.total}[0]} of 8", :controller => 'trips', :action => 'show', :cdl_id => cdl.id) %></td>
    </tr>
    <% end %>
  </table>
</div>
<br />
<br />
<p>This web application is to help manage the progress of those pursuing their CDL. Please contact Dillon for questions or updates.</p>